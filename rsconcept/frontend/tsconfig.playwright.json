{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["playwright"]
  },
  "include": ["playwright.config.ts", "tests/**/*.ts"]
}
