        {
            "name": "Run",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/rsconcept/RunServer.ps1",
            "args": []
        },
        {
            "name": "Test",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/rsconcept/RunTests.ps1",
            "args": []
        },
        {
            "name": "BE-Coverage",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/rsconcept/RunCoverage.ps1",
            "args": []
        },
        {
            "name": "BE-DebugTest",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/rsconcept/backend",
            "program": "${workspaceFolder}/rsconcept/backend/manage.py",
            "args": [
                "test"
            ],
            "django": true
        },
        {
            "name": "BE-Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/rsconcept/backend/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Restart",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/rsconcept/RunServer.ps1",
            "args": ["-freshStart"]
